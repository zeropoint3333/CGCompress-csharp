<Window x:Class="CGCompress.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CGCompress"
        mc:Ignorable="d"
        Title="进度" 
        x:Name="mywindow"
        Height="100" Width="300" WindowStyle="SingleBorderWindow">
    <Grid Margin="20">
        <!--<ProgressBar Minimum="0" Maximum="100" Value="{Binding CurrentProgress, ElementName=mywindow, Mode=OneWay}" Name="progressbar" IsIndeterminate="False"/>-->
        <ProgressBar Minimum="0" Maximum="{Binding Max}" Value="{Binding CurrentProgress}" Name="progressbar" IsIndeterminate="False"/>

        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding TextString}" x:Name="progresstext2"/>
    </Grid>
</Window>
